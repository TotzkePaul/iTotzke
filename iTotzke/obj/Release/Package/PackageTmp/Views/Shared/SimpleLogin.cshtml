<li id="UserDropdownForm" class="dropdown">
    @model iTotzke.Models.User
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Login <b class="caret"></b></a>
        <ul class="dropdown-menu">
            <li>
                <div class="input-prepend">
                    @Html.ValidationSummary(true, "Login failed. Check your login details.")
                    <div style="width: 175px;">
                        @using (Ajax.BeginForm("Login", "User", new AjaxOptions { UpdateTargetId = "UserArea" })){
                            <fieldset>
                                <legend>Login</legend>
                                <div class="editor-label">
                                    @Html.LabelFor(u => u.UserName)
                                </div>
                                <div class="editor-field">
                                    @Html.TextBoxFor(u => u.UserName, new {placeholder = "User Name"})
                                    @Html.ValidationMessageFor(u => u.UserName)
                                </div>
                                <div class="editor-label">
                                    @Html.LabelFor(u => u.Password)
                                </div>
                                <div class="editor-field">
                                    @Html.PasswordFor(u => u.Password, new {placeholder = "Password"})
                                    @Html.ValidationMessageFor(u => u.Password)
                                </div>
                                <div class="editor-label">
                                    @Html.CheckBoxFor(u => u.RememberMe)
                                    @Html.LabelFor(u => u.RememberMe)
                                </div>
                                <input id="btnUserLogin" style="display: inline" class="btn btn-default" type="submit" value="Log In" />
                                @Html.ActionLink("Register", "Register", "User", null, new { @class = "btn btn-default", type = "button" })
                                @*<input style="display: inline" class="btn btn-default" type="button" onclick='location.href = @Url.Action("Register", "User")' value="Register"  /> *@
                            </fieldset>
                        }
                        <div>
                            <br />
                            
                            @Html.ActionLink("Forgot Login?", "Recover", "User")
                        </div>
                    </div>
                </div>
            </li>
        </ul>
</li>


