<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Paul Totzke</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        <meta name="wot-verification" content="494e6dca85b910409257"/>
        <meta name="norton-safeweb-site-verification" content="rqfz1w1oe8jd7lnv7ignckiinripuha8dj0bic6fnxpprsogci67qkvcxksn524tgjwjkl15jeukeale5x2b-5bs8u1dypup1n90443cmysu41npl-s7ggbyf3kq2-h6" />
        @Styles.Render("~/Content/css")
        @Styles.Render("~/Scripts/bootstrap/css/bootstrap");
        @Styles.Render("~/Content/font-awesome/fa/css");

        @Styles.Render("~/Content/themes/base/css")
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/unobtrusive")
        @*
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
        <link rel="stylesheet" href="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.4/themes/smoothness/jquery-ui.css" />
        <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.4/jquery-ui.min.js"></script>*@
        @Scripts.Render("~/bundles/modernizr")    
        @*<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script> *@
    </head>
    <body>
        <header>
            <div class="NavbarWrapperLayout">
                @{ Html.RenderPartial("NavBar"); }
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div>
                    <span>&copy; @DateTime.Now.Year - iTotzke</span>
                    <span><i class="fa fa-eye fa-1x"></i>Privacy Policy</span>
                    <span><i class="fa fa-male fa-1x"></i>Credits</span>
                    <span><i class="fa fa-bug fa-1x"></i>Report a bug</span>
                    <span><i class="fa fa-rss-square fa-1x"></i>RSS Feed</span>
                </div> <br />
                <div id="webutation-badge">
                    <script type="text/javascript">
                        (function () {
                            window.domain = 'itotzke.com';
                            function async_load() {
                                var s = document.createElement('script'); s.type = 'text/javascript'; s.async = true;
                                var p = ('https:' == document.location.protocol ? 'https://' : 'http://');
                                s.src = p + 'www.webutation.net/js/load_badge.js';
                                var x = document.getElementById('webutation-link'); x.parentNode.insertBefore(s, x);
                            }
                            if (window.attachEvent) window.attachEvent('onload', async_load); else window.addEventListener('load', async_load, false);
                        })();
                    </script>
                    <a id="webutation-link" href="http://www.webutation.net/go/review/itotzke.com">itotzke.com Webutation</a>
                </div>
            </div>
        </footer>
        @RenderSection("scripts", required: false)
    </body>
</html>
